        <div class="col-9">

                <iframe src="https://app-demo-async-await-pubsub.azurewebsites.net/swagger/index.html" style="width:100%;height:800px"></iframe>
        </div>
            <div class="col-3">
                <input type="button" value="Clear Notification Events" onclick="doClear()" />

           
                    <div style="text-align:left !important;margin-left:20%" id="content">
                    </div>
      


            </div>
        </div>
    </div>



    <script>


        var ws = new WebSocket("@ViewBag.ClientConnection");

        function doClear(){

            $("#content").html("");

        }
        ws.onmessage = (msg) => {
           // alert(msg.data);
            console.log(msg.data);
            var content =  $("#content").html();

            $("#content").html(content+"<br>"+ msg.data);


};
    </script>

